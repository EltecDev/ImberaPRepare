            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="T3.- Set point compresor (Cª, por defecto:2.0)"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato nuevo para TREFP : " />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etF3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="0.0 a 25"
                android:inputType="numberDecimal" />


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F6.- Tiempo de encendido de ventilador (minutos, por defecto: 1)"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato actual en TREFP : " />
            <TextView
                android:id="@+id/tvF6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 a 250" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato nuevo para TREFP : " />
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="numberDecimal"
                android:id="@+id/etF6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="0 a 250" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F7.- Tiempo de apagado de ventilador (minutos, por defecto: 1)"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato actual en TREFP : " />
            <TextView
                android:id="@+id/tvF7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 a 250" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_height="wrap_content"
                android:digits="1234567890."
                android:hint="0.5 a 9.9"
                android:inputType="numberDecimal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="L6.- Tiempo de puerta abierta para cancelar control de ventilador por puerta (minutos, por defecto:10)"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato actual en TREFP : " />

            <TextView
                android:id="@+id/tvL6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 a 99" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato nuevo para TREFP : " />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etL6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="0 a 99"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

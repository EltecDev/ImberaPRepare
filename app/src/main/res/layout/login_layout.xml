<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_imberatconfig" />

        <LinearLayout
            android:layout_below="@+id/ivlogo"
            android:orientation="vertical"
            android:layout_marginHorizontal="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:inputType=""
                android:id="@+id/etLoginUsuario"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="0.0 a 25" />

            <TextView
                android:text="Contraseña"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:inputType=""
                android:id="@+id/etLoginPassword"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="0.0 a 25" />

            <TextView
                android:id="@+id/etSolicitar_Acceso"
                android:text="Solicitar Acceso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/etforgotPassword"
                android:text="Olvidé la contraseña"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
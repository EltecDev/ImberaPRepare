<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/AlexaWelcomeLayout"
    android:layout_margin="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_white">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/adviceCELayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-light"
            android:text='Documento Excel'
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="36dp"
            android:textSize="15sp"
            android:text='Puedes enviar un documento Excel de la plantilla recién ingresada por medio de correo electrónico,¿Deseas realizarlo ahora?' />

        <Button
            android:id="@+id/btnSendExcel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_corner_black"
            android:gravity="center"
            android:text="PROBAR AHORA"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btndontSendExcel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_corner_white"
            android:gravity="center"
            android:text="PROBAR MAS TARDE"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>